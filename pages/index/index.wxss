.container {
  min-height: 100vh;
}

.form {
  padding: 30rpx 40rpx;
}

.form-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 30rpx;
}

.form-group view {
  font-size: 32rpx;
}

.inputs {
  height: 60vw;
  background: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.inputs input {
  border-bottom: 1px solid #ccc;
}

.inputs>view {
  width: 70vw;
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}
