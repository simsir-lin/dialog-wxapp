@import "./reset.wxss";
@keyframes modalSlideIn {
  from {
    transform: translate(-50%, 150%);
  }
  to {
    transform: translate(-50%, -50%);
  }
}
.animation {
  animation: modalSlideIn 0.4s ease;
  animation-fill-mode: forwards;
}
view,
input,
text {
  font-size: 28rpx;
  color: #333;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10000;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.dialog {
  position: absolute;
  z-index: 10001;
  background-color: #fff;
  border-radius: 14rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.dialog--header {
  padding: 30rpx 0;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.dialog--footer {
  display: flex;
  justify-content: space-around;
}
.dialog--footer__button {
  height: 98rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  font-size: 34rpx;
  border-top: 1px solid rgba(234, 234, 234, 0.5);
}
.button--border {
  border-right: 1px solid rgba(234, 234, 234, 0.5);
}
